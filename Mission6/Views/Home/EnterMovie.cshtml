@model Movie
@{
    ViewData["Title"] = "Enter New Movie";
}

<h1>Enter New Movie</h1>

<form method="post">

    @* Column names: Category	Title	Year	Director	Rating	Edited	Lent To:	Notes *@
    
    <input type="hidden" asp-for="MovieId"/>
    
    <label asp-for="CategoryId">Category:</label>
    <select asp-for="CategoryId"> 
        <option value="">Select a Category</option>
        @foreach (Category category in ViewBag.Categories)
        {
            <option value="@category.CategoryId">@category.CategoryName</option>
        }
    </select>
    @*the asp-for tag helpers link the model to the form*@
    <span asp-validation-for="CategoryId" class="text-danger"></span> <!-- Shows error message -->

    <br />
    <br />

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" />
    <span asp-validation-for="Title" class="text-danger"></span> <!-- Shows error message -->
    <br />
    <br />

    <label asp-for="Year">Year:</label>
    <input asp-for="Year" />
    <span asp-validation-for="Year" class="text-danger"></span> <!-- Shows error message -->
    <br />
    <br />

    <label asp-for="Director">Director:</label>
    <input asp-for="Director" />
    <span asp-validation-for="Director" class="text-danger"></span> <!-- Shows error message -->
    <br />
    <br />

    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="TV-Y7">TV-Y7</option>
        <option value="TV-G">TV-G</option>
        <option value="TV-PG">TV-PG</option>
        <option value="TV-14">TV-14</option>
        <option value="NR">NR</option>
        <option value="UR">UR</option>

    </select>
    <span asp-validation-for="Rating" class="text-danger"></span> <!-- Shows error message -->

    <br />
    <br />

    <label asp-for="Edited">Edited:</label>
    <select asp-for="Edited">
        <option value="1">Yes</option>
        <option value="0">No</option>
    </select>
    <br />
    <br />

    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo" />
    <br />
    <br />

    <label asp-for="CopiedToPlex">CopiedToPlex:</label>
    <select asp-for="CopiedToPlex">
        <option value="1">Yes</option>
        <option value="0">No</option>
    </select>
    <span asp-validation-for="CopiedToPlex" class="text-danger"></span> <!-- Shows error message -->
    <br />
    <br />

    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" />
    <br />
    <br />

    <button type="submit">Submit New Movie</button>
</form>